{
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "**/.js",
    "**/*.jsx"
  ],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "dom",
      "es2017"
    ],
    "allowJs": true,
    "checkJs": true,
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "./src",
    "paths": {
      "lib/*": ["lib/*"],
      "assets/*": ["assets/*"],
      "config/*": ["config/*"],
      "components/*": ["components/*"],
      "utils/*": ["utils/*"],
      "hooks/*": ["hooks/*"],
    }
  }
}
